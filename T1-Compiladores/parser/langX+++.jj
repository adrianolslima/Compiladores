/* Constantes */
TOKEN :
{
  < int_constant:(  // n�meros decimais
                  (["0"-"9"] (["0"-"9"])* ) |
                  (["0"-"7"] (["0"-"7"])* ["o", "O"]) |
                  (["0"-"9"] (["0"-"7", "A"-"F","a"-"f"])* ["h", "H"]) |
                  (["0"-"1"] (["0"-"1"])* ["b", "B"])                    
                 ) >
|
  < string_constant:    // constante string como "abcd bcda"
      "\""( ~["\"","\n","\r"])* "\"" >
|
